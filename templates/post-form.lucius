textarea {
    height: 150px;
    min-height: 150px;
}

.clear-file, .add-file {
    font-size: 1.5em;
    line-height: 1;
}

.clear-file:before {
    content: "âœ–";
}

.add-file:before {
    content: "+";
}

.clear-file, .file-input-size {
    display: none;
}

.close-post-form {
    text-align: center;
}

.js .file-container > div:not(:first-child) {
    display: none;
}

.js .file-input {
    visibility: none;
    position: absolute;
    left: -999999px;
}

.no-js .file-select, .no-js .add-file, .no-js .close-post-form, .no-js .markup-buttons {
    display: none;
}

.file-input-thumb {
    width: 50%;
    margin-bottom: 1%;
    display: block;
}

.markup-buttons ul {
    line-height: 1em;    
}
